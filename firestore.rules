rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // السماح بالقراءة للجميع
      allow read: if true;
      
      // السماح بالكتابة للمستخدمين المصادق عليهم فقط
      // للاختبار، نسمح بالكتابة للجميع مؤقتاً
      allow write: if true;
    }
  }
}
